---

<section id="about" class="about-author">
  <div class="container">
    <h2 class="section-title">About Rashmi</h2>
    <p class="section-subtitle">Discover the many facets of the creator behind Mighty Loka</p>

    <div class="about-grid">
      <div class="author-image-section">
        <div class="image-container">
          <img 
            src="./images/author.jpg" 
            alt="Rashmi Mardur" 
            width="400"
            height="600"
            loading="lazy"
          />
          <div class="image-overlay">
            <h3>Rashmi Mardur</h3>
            <p>Founder & Creative Director</p>
            <div class="social-links">
              <a href="https://ca.linkedin.com/in/rashmi-mardur" aria-label="LinkedIn Profile">
                <i class="fab fa-linkedin"></i>
              </a>
              <a href="https://www.instagram.com/buddingbrushesatelier/" aria-label="Instagram Profile">
                <i class="fab fa-instagram"></i>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="roles-section">
        <div class="roles-grid">
          {sections.map(section => (
            <div class="role-card" data-role={section.id}>
              <button class="role-header" aria-expanded="false">
                <i class={`fas ${section.icon}`}></i>
                <h3>{section.title}</h3>
                <i class="fas fa-chevron-down"></i>
              </button>
              <div class="role-content">
                <p>{section.content}</p>
                
                {section.experience && (
                  <div class="experience-section">
                    <div class="experience-grid">
                      <div class="companies-section">
                        <h4><i class="fas fa-building"></i> Professional Journey</h4>
                        <div class="companies-timeline">
                          {section.experience.companies.map(company => (
                            <div class="company-card">
                              <div class="company-header">
                                <h5>{company.name}</h5>
                                <span class="period">{company.period}</span>
                              </div>
                              <div class="role">{company.role}</div>
                              <p>{company.description}</p>
                            </div>
                          ))}
                        </div>
                      </div>

                      <div class="skills-section">
                        <h4><i class="fas fa-tools"></i> Skills & Expertise</h4>
                        <div class="skills-grid">
                          {section.experience.skills.map(skillGroup => (
                            <div class="skill-group">
                              <h5>{skillGroup.category}</h5>
                              <ul>
                                {skillGroup.items.map(skill => (
                                  <li>
                                    <i class="fas fa-check-circle"></i>
                                    {skill}
                                  </li>
                                ))}
                              </ul>
                            </div>
                          ))}
                        </div>
                      </div>

                      <div class="achievements-section">
                        <h4><i class="fas fa-trophy"></i> Key Achievements</h4>
                        <ul class="achievements-list">
                          {section.experience.achievements.map(achievement => (
                            <li>
                              <i class="fas fa-star"></i>
                              {achievement}
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                  </div>
                )}

                {section.instagram && (
                  <div class="instagram-gallery">
                    <h4>
                      <i class="fab fa-instagram"></i> 
                      Instagram Gallery
                      <a 
                        href={`https://www.instagram.com/${section.instagram.username}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="instagram-link"
                      >
                        @{section.instagram.username}
                      </a>
                    </h4>
                    <div class="instagram-grid">
                      {section.instagram.feed.map((post, index) => (
                        <a 
                          href={post.link}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="instagram-item"
                          data-aos="fade-up"
                          data-aos-delay={index * 100}
                        >
                          <div class="instagram-image">
                            <img 
                              src={post.image} 
                              alt={post.caption}
                              loading="lazy"
                              width="300"
                              height="300"
                            />
                            <div class="instagram-overlay">
                              <i class="fab fa-instagram"></i>
                            </div>
                          </div>
                          <p class="instagram-caption">{post.caption}</p>
                        </a>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about-author {
    padding: 4rem 0;
    background: linear-gradient(135deg, var(--background-color) 0%, #f8f9fa 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    color: var(--text-color);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    text-align: center;
    color: var(--text-color);
    opacity: 0.8;
    margin-bottom: 3rem;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
  }

  .author-image-section {
    position: relative;
  }

  .image-container {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .image-container img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: white;
  }

  .image-overlay h3 {
    margin: 0;
    font-size: 1.5rem;
  }

  .image-overlay p {
    margin: 0.5rem 0;
    opacity: 0.9;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-links a {
    color: white;
    font-size: 1.2rem;
    transition: transform 0.3s ease;
  }

  .social-links a:hover {
    transform: translateY(-3px);
  }

  .roles-grid {
    display: grid;
    gap: 2rem;
  }

  .role-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }

  .role-header {
    width: 100%;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    background: none;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .role-header:hover {
    background-color: rgba(0,0,0,0.05);
  }

  .role-header i {
    font-size: 1.2rem;
    color: var(--primary-color);
  }

  .role-header h3 {
    margin: 0;
    flex-grow: 1;
    text-align: left;
  }

  .role-content {
    padding: 0 1.5rem 1.5rem;
  }

  .role-content p {
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  /* Instagram Gallery Styles */
  .instagram-gallery {
    margin-top: 2rem;
  }

  .instagram-gallery h4 {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    color: var(--text-color);
  }

  .instagram-link {
    margin-left: auto;
    color: var(--primary-color);
    font-size: 0.9rem;
    text-decoration: none;
  }

  .instagram-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .instagram-item {
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .instagram-item:hover {
    transform: translateY(-5px);
  }

  .instagram-image {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    aspect-ratio: 1;
  }

  .instagram-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .instagram-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .instagram-overlay i {
    color: white;
    font-size: 2rem;
  }

  .instagram-item:hover .instagram-overlay {
    opacity: 1;
  }

  .instagram-item:hover .instagram-image img {
    transform: scale(1.05);
  }

  .instagram-caption {
    margin-top: 0.5rem;
    font-size: 0.9rem;
    color: var(--text-color);
    opacity: 0.8;
    line-height: 1.4;
  }

  /* Responsive Design */
  @media (max-width: 992px) {
    .about-grid {
      grid-template-columns: 1fr;
    }

    .author-image-section {
      max-width: 400px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }

    .instagram-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .instagram-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Toggle role content
  document.querySelectorAll('.role-header').forEach(button => {
    button.addEventListener('click', () => {
      const content = button.nextElementSibling as HTMLElement;
      const isExpanded = button.getAttribute('aria-expanded') === 'true';
      
      button.setAttribute('aria-expanded', String(!isExpanded));
      if (content) {
        content.style.display = isExpanded ? 'none' : 'block';
      }
      
      const icon = button.querySelector('.fa-chevron-down') as HTMLElement;
      if (icon) {
        icon.style.transform = isExpanded ? 'rotate(0deg)' : 'rotate(180deg)';
      }
    });
  });

  // Initialize all role contents as hidden except the first one
  document.querySelectorAll('.role-content').forEach((content, index) => {
    if (index !== 0 && content instanceof HTMLElement) {
      content.style.display = 'none';
    }
  });
</script> 