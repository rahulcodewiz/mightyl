import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FlowerGarland from '../components/FlowerGarland.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Welcome to Mighty Loka - Where Little readers discover mighty worlds' } = Astro.props;

